@model List<AvailableRecordingViewModel>

<h2>Available Recordings</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Composer</th>
                <th>Work</th>
                <th>Format</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ComposerName</td>
                    <td>@item.WorkTitle</td>
                    <td>@item.Format</td>
                    <td>@item.Location</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No available recordings found.</div>
}

<a href="/" class="btn btn-secondary">Back to Home</a>